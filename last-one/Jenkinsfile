pipeline {
    agent any

    environment {
        DOCKER_IMAGE = 'bilel06/last-one'
        DOCKER_CREDENTIALS_ID = 'dockerhub-creds'  // ID des credentials Docker Hub dans Jenkins
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'master', url: 'https://github.com/Bilel-lefi/-test-123.git'
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    docker.build("${DOCKER_IMAGE}:latest")
                }
            }
        }

        stage('Push Docker Image') {
            steps {
                script {
                    docker.withRegistry('https://index.docker.io/v1/', "${DOCKER_CREDENTIALS_ID}") {
                        docker.image("${DOCKER_IMAGE}:latest").push()
                    }
                }
            }
        }

        stage('Update redeploy-timestamp') {
            steps {
                bat '''
                    @echo off
                    rem Génère un timestamp au format YYYY-MM-DDTHH-MM-SS
                    for /f "tokens=1-4 delims=/:. " %%a in ("%date% %time%") do (
                        set timestamp=%%d-%%b-%%cT%%e-%%f-%%g
                    )
                    echo Timestamp: %timestamp%

                    rem Affiche avant modification
                    echo Before update:
                    type argocd\\manifests\\deployment.yaml

                    rem Met à jour redeploy-timestamp dans deployment.yaml
                    powershell -Command "(Get-Content 'argocd\\manifests\\deployment.yaml') -replace 'redeploy-timestamp: \".*\"', 'redeploy-timestamp: \"%timestamp%\"' | Set-Content 'argocd\\manifests\\deployment.yaml'"

                    rem Affiche après modification
                    echo After update:
                    type argocd\\manifests\\deployment.yaml
                '''
            }
        }
    }
}
